<% layout("/layouts/boilerPlate") %>
<div class="row mt-3">
    <div class="col-8 offset-3">
    <h3><%= listing.title%></h3>
    </div>
    <div class="card col-6 offset-3 " >
        <img src="<%= listing.image>" class="card-img-top show-img" alt="...">

        <div class="card-body">
          <p class="card-text"><b><%= listing.title%> </b>
            <%= listing.description %><br>
             &#8377;<%= listing.price.toLocaleString("en-IN") %>/night
            <%= listing.location %><br>
            <%= listing.country %>  <br>
          </p>
          </div>
      </div>
      <br/>
       <div class="btns mb-4">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-btn col-1 offset-3">Edit</a>
      
       
        <form method="post" action="/listings/<%= listing._id %>?_method=delete">
            <button class="btn btn-dark  offset-3">Delete</button>
            </form>
           
        </div>
     
        <div class="col-8 offset-3 mb-3">
          <hr/>
          <h4>Leave a Review</h4>
          <form  action="/listings/<%= listing._id %>/reviews" method="post" novalidate class="needs-validation">
              <div class="mb-3 mt-3">
                  <label for="rating" class="form-label">Ratings</label>
                  <input type="range" min="1" max="5" class="form-range" id="rating" name="review[rating]" >
              </div>
              <div class="mb-3 mt-3">
                  
                  <label for="comment" class="form-label">Comments</label>
                  <div class="invalid-feedback">
                    Please choose a country.
                  </div>
                  <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
                  
                </div>
              <button class="btn btn-outline-dark" type="submit">Submit</button>
          </form>
          <hr/>
          <h4>All REVIEWS</h4>
          <p> <%= listing.reviews %></p>
      </div>
</div>
<script src="/public/js/script.js"></script>